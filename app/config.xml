<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id		   = "com.treeangular.BookCrossingApp"
        version 	= "1.0.0">

  <name>BookCrossing</name>

  <description>The best mobile implementation for book crossing!</description>

  <author email="treeangular@gmail.com">TreeAngular</author>

  <!-- Platform Build Selection -->
  <gap:platform name="ios" />
  <gap:platform name="android" />
  <gap:platform name="winphone" />

  <!-- Preferences -->
  <preference name="phonegap-version" value="3.0.0" />
  <preference name="orientation" value="portrait" />
  <preference name="webviewbounce" value="false" />
  <!--<preference name="auto-hide-splash-screen" value="false" />-->

  <!-- Preferences iOS only-->
  <preference name="prerendered-icon" value="true" />
  <preference name="target-device" value="universal" />
  <preference name="EnableLocation" value="true" />

    <!-- Define app icon for each platform. -->
    <icon src="styles/img/icon/icon.png" gap:role="default" />
    <icon src="styles/img/icon/icon57x57.png" gap:platform="ios" width="57" height="57" />
    <icon src="styles/img/icon/icon72x72.png" gap:platform="ios" width="72" height="72" />
    <icon src="styles/img/icon/icon114x114.png" gap:platform="ios" width="114" height="114" />

    <!-- Splash Screens -->
    <gap:splash src="styles/img/splash.png" />
    <!-- Launch images for Android -->
    <gap:splash src="styles/img/splash.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="styles/img/splash.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="styles/img/splash.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="styles/img/splash.png" gap:platform="android" gap:density="xhdpi" />
    <!-- Launch images for IOS -->
    <gap:splash src="styles/img/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="styles/img/splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="styles/img/splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
    <!--<gap:splash src="styles/img/splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="748" /> Not necessary-->
    <gap:splash src="styles/img/splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />
    <!-- retina iPad support: PhoneGap 2.5.0+ only -->
    <!--<gap:splash src="styles/img/splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />Not necessary-->
    <gap:splash src="styles/img/splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" />

  <!--Usage-->
  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <feature name="http://api.phonegap.com/1.0/camera"/>
  <feature name="Geolocation">
      <param name="ios-package" value="CDVLocation" />
  </feature>
  <feature name="Geolocation">
      <param name="android-package" value="org.apache.cordova.GeoBroker" />
  </feature>

  <!--Plugins-->
  <gap:plugin name="org.apache.cordova.camera" />
  <gap:plugin name="org.apache.cordova.geolocation" />
  <gap:plugin name="org.apache.cordova.console" />
  <gap:plugin name="org.apache.cordova.device" />
  <gap:plugin name="org.apache.cordova.network-information" />
  <gap:plugin name="org.apache.cordova.file" />
  <gap:plugin name="org.apache.cordova.dialogs" />
  <gap:plugin name="org.apache.cordova.globalization" />
  <gap:plugin name="org.apache.cordova.splashscreen" />
  <gap:plugin name="com.phonegap.plugins.barcodescanner" />
  <gap:plugin name="com.adobe.plugins.gaplugin" />
  <gap:plugin name="com.phonegap.plugins.facebookconnect">
  <param name="APP_ID" value="160779410752321" />
  <param name="APP_NAME" value="BookCrossing Mobile Application" />
  </gap:plugin>

 </widget>